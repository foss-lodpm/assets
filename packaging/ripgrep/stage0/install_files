# Moves/copies needed files under the program directory.

# Program Binary
install_to_package src/target/release/rg /usr/bin/rg

# Bash Completions
install_to_package src/target/release/build/ripgrep-*/out/rg.bash /usr/share/bash-completion/completions/rg.bash

# Man Page
install_to_package src/target/release/build/ripgrep-*/out/rg.1 /usr/share/man/man1/rg.1.gz
